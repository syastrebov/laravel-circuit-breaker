{
    "name": "syastrebov/laravel-circuit-breaker",
    "description": "Laravel package for circuit breaker.",
    "authors": [
        {
            "name": "syastrebov",
            "email": "serg.yastrebov@gmail.com",
            "homepage": "https://github.com/syastrebov"
        }
    ],
    "license": "MIT",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": "^8.3",
        "syastrebov/circuit-breaker": "0.0.9",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "orchestra/testbench": "^10.9",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "vimeo/psalm": "^6.15",
        "psalm/plugin-laravel": "^3.0",
        "predis/predis": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "CircuitBreaker\\Laravel\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CircuitBreaker\\Laravel\\CircuitBreakerServiceProvider"
            ]
        }
    }
}
